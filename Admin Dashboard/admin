    <script>
        // Initialize Facebook SDK
        window.fbAsyncInit = function() {
            FB.init({
                appId: 'YOUR_FACEBOOK_APP_ID',
                cookie: true,
                xfbml: true,
                version: 'v18.0'
            });
        };

        // Global Configuration
        const CONFIG = {
            GOOGLE_CLIENT_ID: 'YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com',
            FACEBOOK_APP_ID: 'YOUR_FACEBOOK_APP_ID',
            TELEGRAM_BOT_NAME: 'zewedjobs_bot',
            API_BASE_URL: 'https://api.zewedjobs.com/v1'
        };

        // State Management
        let authState = {
            isAuthenticating: false,
            userRole: null,
            redirectUrl: '/dashboard.html'
        };

        // DOM Elements
        const loginForm = document.getElementById('loginForm');
        const loginBtn = document.getElementById('loginBtn');
        const loginText = document.getElementById('loginText');
        const loginLoading = document.getElementById('loginLoading');
        const errorMessage = document.getElementById('errorMessage');
        const successMessage = document.getElementById('successMessage');
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');

        // Toggle Password Visibility
        togglePassword.addEventListener('click', function() {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            this.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
        });

        // Form Submission
        loginForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (authState.isAuthenticating) return;
            
            const emailOrUsername = document.getElementById('emailOrUsername').value.trim();
            const password = document.getElementById('password').value;
            const rememberMe = document.getElementById('rememberMe').checked;
            
            // Validation
            if (!emailOrUsername || !password) {
                showError('Please fill in all fields');
                return;
            }
            
            // Start authentication
            startLoading();
            
            try {
                // In production, this would be an API call
                // const response = await fetch(`${CONFIG.API_BASE_URL}/auth/login`, {
                //     method: 'POST',
                //     headers: { 'Content-Type': 'application/json' },
                //     body: JSON.stringify({ emailOrUsername, password, rememberMe })
                // });
                
                // Simulate API call
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                // Simulate successful login
                const mockUser = {
                    id: 'user_123',
                    email: emailOrUsername.includes('@') ? emailOrUsername : `${emailOrUsername}@example.com`,
                    name: 'Demo User',
                    role: 'job_seeker', // Could be 'job_seeker' or 'employer'
                    avatar: null
                };
                
                // Store user data
                localStorage.setItem('zewedjobs_user', JSON.stringify(mockUser));
                localStorage.setItem('zewedjobs_token', 'mock_jwt_token_123');
                if (rememberMe) {
                    localStorage.setItem('zewedjobs_remember', 'true');
                }
                
                showSuccess('Login successful! Redirecting...');
                
                // Redirect based on role
                setTimeout(() => {
                    redirectUser(mockUser.role);
                }, 1000);
                
            } catch (error) {
                showError('Invalid credentials. Please try again.');
                stopLoading();
            }
        });

        // Google Login
        function loginWithGoogle() {
            if (authState.isAuthenticating) return;
            
            // Initialize Google Sign-In
            google.accounts.id.initialize({
                client_id: CONFIG.GOOGLE_CLIENT_ID,
                callback: handleGoogleResponse,
                ux_mode: 'popup'
            });
            
            // Show Google Sign-In popup
            google.accounts.id.prompt();
        }

        async function handleGoogleResponse(response) {
            startLoading();
            
            try {
                // Verify the credential with your backend
                // const verification = await fetch(`${CONFIG.API_BASE_URL}/auth/google`, {
                //     method: 'POST',
                //     headers: { 'Content-Type': 'application/json' },
                //     body: JSON.stringify({ credential: response.credential })
                // });
                
                // Simulate API call
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                // Parse Google response (simplified)
                const payload = JSON.parse(atob(response.credential.split('.')[1]));
                
                const user = {
                    id: payload.sub,
                    email: payload.email,
                    name: payload.name,
                    avatar: payload.picture,
                    role: determineRoleFromEmail(payload.email),
                    provider: 'google'
                };
                
                // Store user data
                localStorage.setItem('zewedjobs_user', JSON.stringify(user));
                localStorage.setItem('zewedjobs_token', 'google_token_' + user.id);
                
                showSuccess('Google login successful! Redirecting...');
                
                // Redirect
                setTimeout(() => {
                    redirectUser(user.role);
                }, 1000);
                
            } catch (error) {
                showError('Google login failed. Please try again.');
                stopLoading();
            }
        }

        // Facebook Login
        function loginWithFacebook() {
            if (authState.isAuthenticating) return;
            
            FB.login(function(response) {
                if (response.authResponse) {
                    handleFacebookResponse(response.authResponse);
                } else {
                    showError('Facebook login cancelled');
                }
            }, {
                scope: 'public_profile,email',
                return_scopes: true
            });
        }

        async function handleFacebookResponse(authResponse) {
            startLoading();
            
            try {
                // Get user info from Facebook
                FB.api('/me', { fields: 'id,name,email,picture' }, async function(response) {
                    try {
                        const user = {
                            id: response.id,
                            email: response.email || `${response.id}@facebook.zewedjobs.com`,
                            name: response.name,
                            avatar: response.picture?.data?.url,
                            role: determineRoleFromEmail(response.email),
                            provider: 'facebook'
                        };
                        
                        // Store user data
                        localStorage.setItem('zewedjobs_user', JSON.stringify(user));
                        localStorage.setItem('zewedjobs_token', 'fb_token_' + user.id);
                        
                        showSuccess('Facebook login successful! Redirecting...');
                        
                        // Redirect
                        setTimeout(() => {
                            redirectUser(user.role);
                        }, 1000);
                        
                    } catch (error) {
                        showError('Facebook login failed. Please try again.');
                        stopLoading();
                    }
                });
                
            } catch (error) {
                showError('Facebook login failed. Please try again.');
                stopLoading();
            }
        }

        // Telegram Login
        function loginWithTelegram() {
            if (authState.isAuthenticating) return;
            
            // Telegram widget will open automatically
            // The widget is configured in the head with data-auth-url
            showMessage('Opening Telegram login...', 'info');
        }

        // Handle Telegram callback (this would be handled on your backend)
        async function handleTelegramResponse(userData) {
            startLoading();
            
            try {
                // Verify Telegram data with your backend
                // const response = await fetch(`${CONFIG.API_BASE_URL}/auth/telegram`, {
                //     method: 'POST',
                //     headers: { 'Content-Type': 'application/json' },
                //     body: JSON.stringify(userData)
                // });
                
                // Simulate API call
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                const user = {
                    id: userData.id,
                    username: userData.username,
                    name: `${userData.first_name || ''} ${userData.last_name || ''}`.trim(),
                    avatar: userData.photo_url,
                    role: 'job_seeker', // Default role for Telegram users
                    provider: 'telegram'
                };
                
                // If no email, prompt user to add one
                if (!userData.email) {
                    promptForEmail(user);
                    return;
                }
                
                user.email = userData.email;
                
                // Store user data
                localStorage.setItem('zewedjobs_user', JSON.stringify(user));
                localStorage.setItem('zewedjobs_token', 'tg_token_' + user.id);
                
                showSuccess('Telegram login successful! Redirecting...');
                
                // Redirect
                setTimeout(() => {
                    redirectUser(user.role);
                }, 1000);
                
            } catch (error) {
                showError('Telegram login failed. Please try again.');
                stopLoading();
            }
        }

        // Forgot Password
        function showForgotPassword() {
            const modal = document.getElementById('forgotPasswordModal');
            modal.style.display = 'flex';
        }

        function closeModal() {
            const modal = document.getElementById('forgotPasswordModal');
            modal.style.display = 'none';
        }

        async function sendResetLink() {
            const email = document.getElementById('resetEmail').value.trim();
            
            if (!email) {
                showError('Please enter your email address');
                return;
            }
            
            startLoading();
            
            try {
                // Send reset link
                // await fetch(`${CONFIG.API_BASE_URL}/auth/forgot-password`, {
                //     method: 'POST',
                //     headers: { 'Content-Type': 'application/json' },
                //     body: JSON.stringify({ email })
                // });
                
                await new Promise(resolve => setTimeout(resolve, 1500));
                
                showSuccess('Password reset link sent to your email!');
                closeModal();
                stopLoading();
                
            } catch (error) {
                showError('Failed to send reset link. Please try again.');
                stopLoading();
            }
        }

        // Helper Functions
        function startLoading() {
            authState.isAuthenticating = true;
            loginText.style.display = 'none';
            loginLoading.style.display = 'inline-block';
            loginBtn.disabled = true;
        }

        function stopLoading() {
            authState.isAuthenticating = false;
            loginText.style.display = 'inline';
            loginLoading.style.display = 'none';
            loginBtn.disabled = false;
        }

        function showError(message) {
            errorMessage.textContent = message;
            errorMessage.style.display = 'block';
            successMessage.style.display = 'none';
            
            setTimeout(() => {
                errorMessage.style.display = 'none';
            }, 5000);
        }

        function showSuccess(message) {
            successMessage.textContent = message;
            successMessage.style.display = 'block';
            errorMessage.style.display = 'none';
        }

        function showMessage(message, type = 'info') {
            if (type === 'error') {
                showError(message);
            } else if (type === 'success') {
                showSuccess(message);
            }
        }

        function determineRoleFromEmail(email) {
            // In production, check if email exists in database
            // Return 'employer' for company emails, 'job_seeker' for others
            if (email && email.includes('@company.')) {
                return 'employer';
            }
            return 'job_seeker';
        }

        function redirectUser(role) {
            let redirectTo = '/dashboard.html';
            
            if (role === 'job_seeker') {
                redirectTo = '/dashboard/job-seeker.html';
            } else if (role === 'employer') {
                redirectTo = '/dashboard/employer.html';
            }
            
            window.location.href = redirectTo;
        }

        function promptForEmail(user) {
            const email = prompt('Please enter your email address for account verification:');
            if (email && email.includes('@')) {
                user.email = email;
                // Update user with email
                localStorage.setItem('zewedjobs_user', JSON.stringify(user));
                redirectUser(user.role);
            } else {
                showError('Valid email is required. Please try again.');
                stopLoading();
            }
        }

        // Modal close on outside click
        window.onclick = function(event) {
            const modal = document.getElementById('forgotPasswordModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Check if user is already logged in
        function checkAuthStatus() {
            const user = localStorage.getItem('zewedjobs_user');
            const token = localStorage.getItem('zewedjobs_token');
            
            if (user && token) {
                showMessage('You are already logged in. Redirecting...', 'info');
                const userData = JSON.parse(user);
                setTimeout(() => redirectUser(userData.role), 1000);
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            checkAuthStatus();
            
            // Check URL parameters for errors/messages
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            const message = urlParams.get('message');
            
            if (error) {
                showError(decodeURIComponent(error));
            }
            if (message) {
                showSuccess(decodeURIComponent(message));
            }
        });

        // Terms and Privacy
        function showPrivacyPolicy() {
            alert('Privacy Policy will be shown here.');
        }

        function showTerms() {
            alert('Terms of Service will be shown here.');
        }
    </script>
</body>
</html>
