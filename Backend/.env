# ============================================
# ZEWED JOBS - ENVIRONMENT CONFIGURATION
# ============================================

# Application
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000
API_VERSION=v1
APP_NAME=Zewed Jobs
APP_DESCRIPTION=Ethiopia's Premier Job Portal

# Database
MONGODB_URI=mongodb://localhost:27017/zewed_jobs
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/zewed_jobs_prod?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=support@zewedjobs.com

# Payment Gateways (Ethiopian)
CHAPA_SECRET_KEY=your_chapa_secret_key
TELEBIRR_API_KEY=your_telebirr_api_key
TELEBIRR_API_SECRET=your_telebirr_api_secret
CBE_MERCHANT_ID=your_cbe_merchant_id
CBE_MERCHANT_KEY=your_cbe_merchant_key

# AI Services
OPENAI_API_KEY=your_openai_api_key
AI_CHAT_MODEL=gpt-3.5-turbo
AI_JOBS_MODEL=gpt-4

# Social Media APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# File Upload
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
MAX_FILE_SIZE=10485760 # 10MB

# Redis (Cache & Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Ads Configuration
AD_REFRESH_INTERVAL=30000
AD_MAX_IMPRESSIONS=100000
AD_CPC_RATE=0.5
AD_CPM_RATE=5

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000

# Logging
LOG_LEVEL=info
LOG_FILE=combined.log
ERROR_LOG_FILE=error.log

# Feature Flags (comma separated)
ENABLED_FEATURES=ai_job_matching,real_time_notifications,chat_system,certificate_verification,payment_gateways
