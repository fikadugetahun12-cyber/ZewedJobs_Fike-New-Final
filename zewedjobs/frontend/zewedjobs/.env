# App Configuration
NODE_ENV=development
PORT=5000
APP_NAME=ZewedJobs
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/zewedjobs
DB_NAME=zewedjobs

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Ethiopian Payment Gateways
TELEBIRR_ENABLED=true
TELEBIRR_API_KEY=your_telebirr_api_key
TELEBIRR_SHORT_CODE=your_short_code
TELEBIRR_PUBLIC_KEY=telebirr_public_key
TELEBIRR_PRIVATE_KEY=telebirr_private_key
TELEBIRR_CALLBACK_URL=${APP_URL}/api/payment/telebirr/callback

CBE_BIRR_ENABLED=true
CBE_BIRR_API_KEY=your_cbe_birr_api_key
CBE_BIRR_MERCHANT_ID=your_merchant_id
CBE_BIRR_CALLBACK_URL=${APP_URL}/api/payment/cbe-birr/callback

# Global Payment Gateways
PAYPAL_ENABLED=true
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

STRIPE_ENABLED=true
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

CHAPA_ENABLED=true
CHAPA_API_KEY=your_chapa_api_key
CHAPA_CALLBACK_URL=${APP_URL}/api/payment/chapa/callback

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@zewedjobs.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Admin Credentials (Change immediately after first setup)
ADMIN_EMAIL=admin@zewedjobs.com
ADMIN_PASSWORD=Admin@123

# External APIs
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=${FRONTEND_URL}
