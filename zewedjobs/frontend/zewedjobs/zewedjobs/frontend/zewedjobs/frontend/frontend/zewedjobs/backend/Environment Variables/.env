# Server Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/zewedjobs
DB_NAME=zewedjobs

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@zewedjobs.com
FROM_NAME=ZewedJobs

# Payment Gateways
# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Chapa (Ethiopian Payments)
CHAPA_SECRET_KEY=your_chapa_secret_key
CHAPA_PUBLIC_KEY=your_chapa_public_key

# Telebirr
TELEBIRR_SHORT_CODE=your_telebirr_short_code
TELEBIRR_USERNAME=your_telebirr_username
TELEBIRR_PASSWORD=your_telebirr_password

# CBE Birr
CBE_BIRR_MERCHANT_ID=your_cbe_birr_merchant_id
CBE_BIRR_API_KEY=your_cbe_birr_api_key

# File Uploads
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Admin
ADMIN_EMAIL=admin@zewedjobs.com
ADMIN_INITIAL_PASSWORD=admin123

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PAYMENT=true
ENABLE_SOCKET=true
